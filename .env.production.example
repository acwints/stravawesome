# Production Environment Variables Template

# NextAuth Configuration
NEXTAUTH_SECRET="generate-secure-random-string-for-production"
NEXTAUTH_URL="https://your-production-domain.com"
NEXTAUTH_DEBUG="false"

# Debug mode (should be false in production)
NEXT_PUBLIC_ENABLE_DEBUG="false"

# Google OAuth
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"

# Strava API Configuration
STRAVA_CLIENT_ID="your-strava-client-id"
STRAVA_CLIENT_SECRET="your-strava-client-secret"

# Supabase Configuration - Production Database
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Database URLs - Use connection pooling in production
DATABASE_URL="postgres://user:password@host:port/database?pgbouncer=true&connection_limit=1"
POSTGRES_URL="postgres://user:password@pooler:port/database?sslmode=require"
POSTGRES_URL_NON_POOLING="postgresql://user:password@host:port/database?sslmode=require"

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key"

# Optional: Monitoring and Analytics
# SENTRY_DSN="your-sentry-dsn"
# NEXT_PUBLIC_GA_ID="your-google-analytics-id"
